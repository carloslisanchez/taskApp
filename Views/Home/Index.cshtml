@model IEnumerable<TaskApp.Models.AppModel>
@{
    ViewData["Title"] = "Home Page";
}
<div class="container">
    <div class="d-flex justify-content-start">
        <button type="button" id="btn-add" class="btn btn-outline-secondary" onclick="AddApp();">Add app</button>
    </div>
    <div class="row row-cols-3">
        @if (Model.Count() == 0)
        {
            <div>No se encontraron datos</div>
        }

        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card text-bg-primary mb-3" style="max-width: 18rem;">
                    <div class="card-header">@item.name</div>
                    <div class="card-body">
                        @* <h5 class="card-title">Primary card title</h5> *@
                        <p class="card-text">@item.Description</p>
                        @* <a href="#" class="btn btn-primary">Button</a> *@
                        <a asp-action="Tareas" asp-route-id="@item.ID" class="btn btn-primary">Tareas</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Vertically centered modal -->
<div class="modal fade" id="ModalAddApp" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
<div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="staticBackdropLabel">...</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <div>
                <form id="formApp">
                    <div class="mb-3">
                        <label for="InputAppName" class="form-label">App Name</label>
                        <input type="text" name="name" class="form-control" id="InputAppName"
                            aria-describedby="appName">
                    </div>
                    <div class="mb-3">
                        <label for="inputDescription" class="form-label">Description</label>
                        <input type="text" name="Description" class="form-control" id="Description">
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Understood</button>
        </div>
    </div>
</div>
</div>

@section Scripts{
    <script src="~/js/Home/index.js"></script>
}
